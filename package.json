{
  "name": "root",
  "private": true,
  "scripts": {
    "clean:node_modules": "lerna clean",
    "init:node_modules": "lerna bootstrap --hoist",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "build": "lerna run build",
    "publish": "lerna publish --skip-git",
    "publish:canary": "lerna publish --canary",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "build:apiDoc": "rimraf apiDocs && typedoc --tsconfig ./tsconfig.json --options ./typedoc.config.json && mkdir -p ./apiDocs/docs/assets && cp -r ./docs/assets/* ./apiDocs/docs/assets",
    "deploy:apiDoc": "npm run build:apiDoc && gh-pages -d apiDocs"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@augejs/koa": "1.0.2-rc.6",
    "@augejs/module-core": "1.0.2-rc.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^14.6.4",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^7.8.1",
    "gh-pages": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  }
}
